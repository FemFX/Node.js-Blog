<% include partials/header %>

<div class="ui text container context">
    <div class="ui huge header">
        Edit Post
    </div>
    <form class="ui form" action="/post/<%= post._id %>/edit" method="POST">
        <div class="field">
            <label for="title">Title</label>
            <input type="text" name="title" value="<%= post.title %>">
        </div>
        <div class="field">
            <label for="image">Image</label>
            <input type="text" name="image" value="<%= post.image %>">
        </div>
        <div class="field">
            <label for="body">Body</label>
            <textarea name="body" cols="30" rows="10"><%= post.body %></textarea>
        </div>
        <button class="ui">Submit</button>
    </form>
</div>

<% include partials/footer %>